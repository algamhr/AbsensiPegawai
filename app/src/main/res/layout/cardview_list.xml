<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="30dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardlistpegawai"
        android:layout_width="320dp"
        android:layout_height="100dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listpegawaitext">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/backgrounddate"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:background="@drawable/bgdate"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/datetimeuser"
                    android:layout_centerHorizontal="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorWhite"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:text="@string/tanggal_jam"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/namauser"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/nama"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:lines="2"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/backgrounddate" />

            <TextView
                android:id="@+id/nidnuser"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="13sp"
                android:text="@string/nidn"
                android:layout_marginTop="16dp"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/namauser"/>

            <TextView
                android:id="@+id/keteranganuser"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="@string/keterangan"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="@id/backgrounddate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/backgrounddate"/>

            <TextView
                android:id="@+id/lokasiuser"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="10sp"
                android:layout_marginTop="16dp"
                android:text="@string/lokasi"
                app:layout_constraintStart_toStartOf="@id/keteranganuser"
                app:layout_constraintEnd_toEndOf="@id/keteranganuser"
                app:layout_constraintTop_toBottomOf="@id/keteranganuser"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

